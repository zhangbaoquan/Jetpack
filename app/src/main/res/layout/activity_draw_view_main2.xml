<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/status_bar_night_mode"
    tools:context="main.java.coffer.MainActivity">

    <coffer.androidDemo.customViewDemo.weidget.XmodeView
        android:id="@+id/circleView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/haruhi"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <coffer.androidDemo.customViewDemo.weidget.CircleImageView
        android:id="@+id/circle_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:civ_border_color="@color/blue"
        app:civ_border_width="2dp"
        android:src="@drawable/haruhi"
        android:layout_below="@+id/circleView"
        android:layout_centerHorizontal="true"
        />

    <coffer.androidDemo.customViewDemo.weidget.NoRequestLayoutSeekBar
        android:layout_below="@+id/circle_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:thumb="@null"
        android:background="@drawable/audio_seek_bar_background"
        android:progressDrawable="@drawable/audio_play_control_seek_style"
        android:layout_height="wrap_content"/>

