<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_dp_10"
        android:layout_marginTop="@dimen/dk_dp_10"
        android:background="@drawable/bg_gradient"
        android:text="模拟崩溃"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_dp_10"
        android:layout_marginTop="@dimen/dk_dp_10"
        android:background="@drawable/bg_gradient"
        android:text="分享崩溃日志"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_dp_10"
        android:layout_marginTop="@dimen/dk_dp_10"
        android:background="@drawable/bg_gradient"
        android:text="读取显示崩溃日志"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dk_dp_10"
        android:layout_marginTop="@dimen/dk_dp_10"
        android:layout_marginRight="@dimen/dk_dp_10" />

    <Button
        android:id="@+id/testNativeCrashInMainThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testNativeCrashInMainThread_onClick"
        android:padding="20dp"
        android:text="native crash (in main java thread)"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/testNativeCrashInAnotherJavaThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testNativeCrashInAnotherJavaThread_onClick"
        android:padding="20dp"
        android:text="native crash (in another java thread)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testNativeCrashInAnotherNativeThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testNativeCrashInAnotherNativeThread_onClick"
        android:padding="20dp"
        android:text="native crash (in another native thread)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testNativeCrashInAnotherActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testNativeCrashInAnotherActivity_onClick"
        android:padding="20dp"
        android:text="native crash (in another activity)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testNativeCrashInAnotherProcessButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:onClick="testNativeCrashInAnotherProcess_onClick"
        android:padding="20dp"
        android:text="native crash (in another process)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testJavaCrashInMainThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testJavaCrashInMainThread_onClick"
        android:padding="20dp"
        android:text="java crash (in main java thread)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testJavaCrashInAnotherThreadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testJavaCrashInAnotherThread_onClick"
        android:padding="20dp"
        android:text="java crash (in another java thread)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testJavaCrashInAnotherActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testJavaCrashInAnotherActivity_onClick"
        android:padding="20dp"
        android:text="java crash (in another activity)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testJavaCrashInAnotherProcessButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="20dp"
        android:onClick="testJavaCrashInAnotherProcess_onClick"
        android:padding="20dp"
        android:text="java crash (in another process)"
        android:textAllCaps="false"
         />

    <Button
        android:id="@+id/testAnrInputButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:onClick="testAnrInput_onClick"
        android:padding="20dp"
        android:text="ANR (input timeout)"
        android:textAllCaps="false"
         />
    </LinearLayout>
</ScrollView>